<!-- フラッシュメッセージ -->
<% flash.each do |message_type, message| %>
  <div class="alert <%= message_type == 'notice' ? 'alert-success' : 'alert-error' %> mx-auto max-w-md mt-4">
    <%= message %>
  </div>
<% end %>

<!-- マイページ -->
<main class="container-responsive pt-6 pb-24">
  <!-- タイトル -->
  <section class="text-center mb-8">
    <h1 class="text-3xl md:text-4xl font-bold text-slate-800">
      マイページ
    </h1>
  </section>

  <!-- ユーザー情報カード -->
  <section class="max-w-2xl mx-auto">
    <div class="card bg-white shadow-lg">
      <div class="card-body">
        <!-- ユーザー名 -->
        <div class="mb-6">
          <h2 class="text-xl font-semibold text-sky-600 mb-4">ユーザー情報</h2>

          <div class="space-y-4">
            <!-- 姓名 -->
            <div class="flex items-center gap-4 p-4 bg-sky-50 rounded-lg">
              <div class="flex-1">
                <p class="text-sm text-slate-600 mb-1">お名前</p>
                <p class="text-lg font-medium text-slate-800">
                  <%= "#{@user.last_name} #{@user.first_name}" %>
                </p>
              </div>
            </div>

            <!-- メールアドレス -->
            <div class="flex items-center gap-4 p-4 bg-sky-50 rounded-lg">
              <div class="flex-1">
                <p class="text-sm text-slate-600 mb-1">メールアドレス</p>
                <p class="text-lg font-medium text-slate-800">
                  <%= @user.email %>
                </p>
              </div>
            </div>
          </div>
        </div>

        <!-- ボタン -->
        <div class="card-actions justify-center mt-6">
          <%= link_to 'プロフィールを編集', edit_mypage_path, class: "btn btn-primary w-full md:w-auto" %>
        </div>
      </div>
    </div>
  </section>
</main>
