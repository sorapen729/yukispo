<!-- フラッシュメッセージ -->
<% flash.each do |message_type, message| %>
  <div class="alert alert-success">
    <%= message %>
  </div>
<% end %>

<!-- メイン -->
<main class="container-responsive pt-6 pb-24">
  <!-- タイトル -->
  <section class="text-center">
    <h1 class="text-[40px] md:text-5xl lg:text-6xl leading-tight font-extrabold text-slate-800 drop-shadow-sm select-none">
      ゆきスポ<span aria-hidden="true">❄️</span>
    </h1>
    <p class="text-slate-500 mt-1 md:text-lg">〜 スキー場検索アプリ 〜</p>
  </section>

  <!-- ボタン群 -->
  <section class="mt-8 md:mt-12 space-y-4 md:flex md:space-y-0 md:space-x-4 md:justify-center">
    <!-- スキー場を探す -->
    <%= link_to new_origin_selection_path, class: "btn btn-neutral w-full md:w-auto" do %>
      スキー場を探す
    <% end %>

    <!-- ログイン -->
    <% unless user_signed_in? %>
      <%= link_to (defined?(new_user_session_path) ? new_user_session_path : "#"),
        class: "btn btn-primary w-full md:w-auto" do %>
        ログイン
      <% end %>
    <% end %>
  </section>

  <!--  新規登録  -->
  <% unless user_signed_in? %>
  <div class="text-center mt-12 md:mt-16">
    <%= link_to "新規登録の方はこちら", new_user_registration_path, class: "link link-primary md:text-lg" %>
  </div>
  <% end %>
</main>
