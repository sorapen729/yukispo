<!-- メイン -->
<main class="max-w-md mx-auto px-4 pt-6 pb-24">
  <!-- タイトル -->
  <section class="text-center">
    <h1 class="text-[40px] leading-tight font-extrabold text-slate-800 drop-shadow-sm select-none">
      ゆきスポ<span aria-hidden="true">❄️</span>
    </h1>
    <p class="text-slate-500 mt-1">〜 スキー場検索アプリ 〜</p>
  </section>

  <!-- ボタン群 -->
  <section class="mt-8 space-y-4">
    <!-- スキー場を探す -->
    <%= link_to new_origin_selection_path, class: "block w-full" do %>
      <div class="w-full text-center rounded-xl px-6 py-3 bg-slate-200 text-slate-800 font-semibold
                  shadow-sm hover:bg-slate-300 transition active:scale-[0.99]"
        style="border: 1px solid rgba(0,0,0,0.08);">
        スキー場を探す
      </div>
    <% end %>

    <!-- ログイン -->
    <% unless user_signed_in? %>
      <%= link_to (defined?(new_user_session_path) ? new_user_session_path : "#"),
        class: "block w-full" do %>
        <div class="w-full text-center rounded-xl px-6 py-3 bg-sky-500 text-white font-semibold
                    shadow-sm hover:bg-sky-600 transition active:scale-[0.99]">
          ログイン
        </div>
      <% end %>
    <% end %>
  </section>

  <!--  新規登録  -->
  <% unless user_signed_in? %>
  <div class="text-center mt-12">
    <%= link_to "新規登録の方はこちら", new_user_registration_path,
        class: "text-sky-500 hover:text-sky-700 underline" %>
  </div>
  <% end %>
</main>
