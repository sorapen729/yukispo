<div class="container-responsive pt-6 pb-24">
  <%= render "shared/error_explanation", resource: resource %>
  <div class="max-w-md mx-auto">
    <h1 class="text-2xl md:text-3xl font-bold text-center mb-6 md:mb-8 text-slate-800">新規登録</h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field mb-4 md:mb-6">
        <label class="block text-sm md:text-base font-medium text-slate-700 mb-2">お名前</label>
        <div class="flex gap-2 md:gap-3">
          <div class="flex-1">
            <%= f.text_field :last_name, maxlength: 6, placeholder: "姓",
                class: "w-full rounded-xl border border-black/10 px-4 py-3 md:py-4 bg-white text-base md:text-lg
                        focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-transparent" %>
          </div>
          <div class="flex-1">
            <%= f.text_field :first_name, maxlength: 6, placeholder: "名",
                class: "w-full rounded-xl border border-black/10 px-4 py-3 md:py-4 bg-white text-base md:text-lg
                        focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-transparent" %>
          </div>
        </div>
      </div>

      <div class="field mb-4 md:mb-6">
        <%= f.label :email, "メールアドレス", class: "block text-sm md:text-base font-medium text-slate-700 mb-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",
            class: "w-full rounded-xl border border-black/10 px-4 py-3 md:py-4 bg-white text-base md:text-lg
                    focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-transparent" %>
      </div>

      <div class="field mb-4 md:mb-6">
        <div class="mb-2">
          <%= f.label :password, "パスワード", class: "text-sm md:text-base font-medium text-slate-700" %>
          <% if @minimum_password_length %>
          <em class="text-xs md:text-sm text-slate-500">（<%= @minimum_password_length %>文字以上）</em>
          <% end %>
        </div>
        <%= f.password_field :password, autocomplete: "new-password",
            class: "w-full rounded-xl border border-black/10 px-4 py-3 md:py-4 bg-white text-base md:text-lg
                    focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-transparent" %>
      </div>

      <div class="field mb-5 md:mb-6">
        <%= f.label :password_confirmation, "パスワード（確認）", class: "block text-sm md:text-base font-medium text-slate-700 mb-2" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password",
            class: "w-full rounded-xl border border-black/10 px-4 py-3 md:py-4 bg-white text-base md:text-lg
                    focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-transparent" %>
      </div>

      <div class="actions">
        <%= f.submit "登録する",
            class: "w-full md:w-auto md:mx-auto md:block text-center rounded-xl px-6 md:px-12 py-3 md:py-4 bg-sky-500 text-white font-semibold text-base md:text-lg
                    shadow-sm hover:bg-sky-600 transition active:scale-[0.99]" %>
      </div>
    <% end %>
  </div>
</div>
