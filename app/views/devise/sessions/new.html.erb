<div style="text-align: center; max-width: 400px; margin: 0 auto; padding: 20px;">
  <h1 style="font-size: 2em; margin-bottom: 30px;">ログイン</h1>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field" style="margin-bottom: 15px;">
      <%= f.label :email, "メールアドレス" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", style: "width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px;" %>
    </div>

    <div class="field" style="margin-bottom: 15px;">
      <%= f.label :password, "パスワード" %><br />
      <%= f.password_field :password, autocomplete: "current-password", style: "width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px;" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field" style="margin-bottom: 20px; text-align: left;">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "ログイン状態を保持する" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "ログイン", style: "width: 100%; padding: 12px; background-color: #007bff; color: white; border: none; border-radius: 4px; font-size: 16px; cursor: pointer;" %>
    </div>
  <% end %>

  <div style="margin-top: 20px;">
    <%= render "devise/shared/links" %>
  </div>
</div>
