<!-- メイン -->
<main class="container-responsive pt-6 pb-24">
  <!-- タイトル -->
  <section class="text-center">
    <p class="text-slate-800 text-xl md:text-2xl font-semibold mt-4 text-left">出発地を選ぶ</p>
  </section>

  <!-- ボタン群 -->
  <section class="mt-8 md:mt-12 space-y-4">
    <!-- 現在地から出発する -->
    <%= link_to "#", class: "block w-full md:w-auto" do %>
      <div class="btn-secondary">
        現在地（開発中）
      </div>
    <% end %>
    <!-- 指定の住所から出発する -->
    <%= link_to new_origin_address_input_path, class: "block w-full md:w-auto" do %>
      <div class="btn-secondary">
        住所入力
      </div>
    <% end %>
    <!-- 自宅から住所から出発する -->
    <%= link_to "#", class: "block w-full md:w-auto" do %>
      <div class="btn-secondary">
        自宅（開発中）
      </div>
    <% end %>
  </section>
</main>
